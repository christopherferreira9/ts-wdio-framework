    },
    "private": true,
    "dependencies": {
        "@wdio/allure-reporter": "^7.19.7",
        "@wdio/cli": "^7.19.7",
        "@wdio/local-runner": "^7.19.7",
        "@wdio/mocha-framework": "^7.19.7",
        "@wdio/spec-reporter": "^7.19.7",
        "@wdio/sync": "^7.2.3",
        "allure-commandline": "^2.13.8",
        "chromedriver": "^101.0.0",
        "geckodriver": "^3.0.1",
        "del-cli": "^3.0.1",
        "mocha": "^10.0.0",
        "npm-run-all": "^4.1.5",
        "wdio-chromedriver-service": "^7.3.2",
        "wdio-geckodriver-service": "^2.1.1",
        "wdio-wait-for": "^2.2.6",
        "webdriverio": "^7.2.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.0.1",
        "@commitlint/config-conventional": "^12.0.1",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "eslint": "^7.32.0",
        "husky": "^6.0.0",
        "prettier": "^2.2.1",
        "ts-node": "^10.8.0",
        "typescript": "^4.7.2"
    },
    "scripts": {
        "build": "npx del ./dist && npx tsc",
        "watch": "npx tsc -w",
        "code:format": "eslint . --ext .ts && prettier --check \"*.ts*\" --write",
        "report:generate": "npx allure generate --clean ./allure-results/ -o ./allure-reports",
        "report:open": "npx allure open allure-reports",
        "tests:e2e": "npx del allure-results && npx wdio run ./dist/wdio.conf.js --spec ./dist/test/specs/*.js"
    }
}